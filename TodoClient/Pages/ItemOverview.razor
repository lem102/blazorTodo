@page "/itemoverview"

<h1>All Items</h1>

@if (Items == null) {
  <p>
    Loading...
  </p>
  }
  else {
  <table class="table">
    <thead>
      <tr>
        <td>Id</td>
        <td>Title</td>
        <td>IsDone</td>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Items)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.Title</td>
          <td>@item.IsDone</td>
          <td>
            <a href="@($"itemdetail/{item.Id}")" class="btn btn-success">detail</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
  }

